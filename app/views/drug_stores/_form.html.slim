= simple_form_for([@state, @city, @drug, @drug_store]) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :address
    = f.input :hour_open_regular
    = f.input :hour_close_regular
    = f.input :days_regular
    = f.input :hour_open_other
    = f.input :hour_close_other
    = f.input :days_other
    = f.input :payment_options, collection: ["Tarjeta", "Efectivo", "Efectivo o Tarjeta"]
    = image_tag @drug_store.logo.url(:medium)
    = f.input :logo, as: :file, required: "true"
    = f.input :delivery_radius

  .form-actions
    = f.button :submit
